"""
11. Container With Most Water
https://leetcode.com/problems/container-with-most-water/

Difficulty: Medium
Status: 100% AC – Runtime beats 98%+, Memory beats 95%+

Approach: Two-pointer greedy
Time:  O(N) – single pass
Space: O(1)
"""

from typing import List

class Solution:
    def maxArea(self, height: List[int]) -> int:
        """
        Greedy two-pointer solution:
        - Start with maximum width (left = 0, right = n-1)
        - Area = min(height[left], height[right]) * width
        - Always move the shorter pointer inward
        - Moving the taller one cannot increase area
        """
        left = 0
        right = len(height) - 1
        max_area = 0
        
        while left < right:
            width = right - left
            current_area = min(height[left], height[right]) * width
            max_area = max(max_area, current_area)
            
            if height[left] < height[right]:
                left += 1
            else:
                right -= 1
                
        return max_area
